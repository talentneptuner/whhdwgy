/* pages/apartment/apartment.wxss */
.header{
  width: 100%;
  height: 375rpx;
  position: relative;
}
.header-img{
  height: 100%;
  width: 100%;
}
.header-title{
  position: absolute;
  left: 60rpx;
  top: 150rpx;
  font-family: Microsoft YaHei;
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
}
.manage-desc{
  z-index: 2;
  position: absolute;
  top: 310rpx;
  left: 5px;
  right: 5px;
}
.part{
  margin-top: 50rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.part-title{
  background: #ccc;
  margin-top: 3rpx;
  height: 50rpx;
  border-top-left-radius: 5rpx;
  border-top-right-radius: 5rpx;
}
.title{
  font-family: Microsoft YaHei;
  margin-left: 20rpx;
  line-height: 45rpx
}
.part-content{
  background: rgba(238, 238, 238, 0.6);
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: left;
  width: 100%;
}
.part-node{
  width: 160px;
  float: left;
  margin: 4px;
  padding: 1rpx 0;
  border: 1rpx solid #ccc;
  text-align: center;
  border-radius: 10rpx;
  background: #fff;
}

.node-name{
  font-size: 30rpx;
  line-height: 2;
}

/* pages/class/class.wxss */

.header{
  width: 100%;
  height: 375rpx;
  position: relative;
}
.header-img{
  height: 100%;
  width: 100%;
}
.header-title{
  position: absolute;
  left: 60rpx;
  top: 150rpx;
  font-family: Microsoft YaHei;
  color: #ffffff;
  font-size: 60rpx;
  font-weight: bold;
}
.nav{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 3rpx;
}

.nav-item-active{
  flex: 1;
  text-align: center;
  border-top: solid 3rpx;
  border-left: solid 3rpx;
  border-right: solid 3rpx;
  border-top-left-radius: 5rpx;
  border-top-right-radius: 5rpx;
  border-color: #ccc;
  line-height: 2;
  color: #333
}
.nav-item{
  flex: 1;
  text-align: center;
  border-bottom: solid 3rpx;
  border-color:#ccc;
  line-height: 2;
  color: #666
}

.desc-container{
  display: block;
  text-indent: 44rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.desc{
  font-size: 26rpx;
  line-height: 44rpx;
  color: #666;
  overflow: hidden;
  text-indent: 44rpx;
}

.image-container{
  display: flex;
  flex-direction: column;
  margin-top: 5px;
  margin-left: 5px;
  margin-right: 5px;
  box-shadow: 1px 1px 10px 1px #eeee;
  margin-bottom: 15px;
  background: #ffffff;
  border-radius: 7rpx;
  
}



.image-image{
  width: 100%;
  border-radius: 5rpx;
  margin-bottom: 10px;
}

.image-desc-container{
  text-align: center
}

.image-desc{
  text-align: center;
  font-size: 40rpx;
  line-height: 0.8;
  color: #666;
}
